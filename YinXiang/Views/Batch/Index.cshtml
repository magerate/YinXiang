<script src="~/Scripts/jquery/jquery.js"></script>
<script>
    function loadBatchData() {
        $.get('/Batch/List?' + $('#frmBatchSearch').trimSerialize(), function (data) {
            $('#BatchListDiv').html(data);
        });
    }
    function sortCallback() {
        $('a[data-swhglnk="true"]').attr('href', function () {
            return this.href.replace(/&__swhg=[0-9]{13}/, '');
        });
    }
    function sendBatchNoToDevice(batchNo) {
        $.post('/Batch/SendBatchNoes',
            { 'BatchNo': batchNo, 'DeviceName': 'test', 'IP': '127.0.0.0', 'Account': 'test account' },
            function (result) {
                if (result == "发送成功") {
                    $('#btn_' + batchNo).parent().html('已发送');
                }
                $('#alertMsgModal .modal-body').html(result);
                $('#alertMsgModal').modal('show');
            })
    }
</script>
